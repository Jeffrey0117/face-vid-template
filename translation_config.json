{
  "version": "1.0",
  "project_name": "YouTube翻譯專案",
  "project_type": "youtube_translate",

  "paths": {
    "source_video_folder": "backend/downloads/youtube",
    "output_folder": "videos/translated",
    "draft_template": "長片翻譯專案"
  },

  "whisper": {
    "model": "medium",
    "language": "en",
    "task": "transcribe",
    "temperature": 0,
    "word_timestamps": true
  },

  "translation": {
    "service": "deepseek",
    "base_url": "https://api.deepseek.com",
    "source_language": "en",
    "target_language": "zh-TW",
    "model": "deepseek-chat",
    "prompt_template": "將以下英文字幕翻譯成繁體中文，保持專業術語準確，語氣自然流暢：\n\n{text}"
  },

  "subtitle_style": {
    "font_size": 10,
    "text_color": "#FFFFFF",
    "background_color": "#000000",
    "background_alpha": 0.7,
    "position_y": -0.75,
    "stroke_width": 2,
    "stroke_color": "#000000",
    "bold": true,
    "shadow": true,
    "line_max_width": 0.85
  },

  "jianying": {
    "canvas_width": 1920,
    "canvas_height": 1080,
    "canvas_ratio": "16:9",
    "fps": 30
  },

  "workflow": {
    "auto_transcribe": true,
    "auto_translate": true,
    "auto_generate_draft": true,
    "skip_existing": true
  }
}
